    "@types/node": "^24.10.1",
    "eslint": "^9.15.0",
    "husky": "^9.1.7",
    "typescript": "^5.6.0",
    "vitest": "^2.1.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kitium-ai/environments.git"
  },
  "bugs": {
