    "hashicorp-vault",
    "vault",
    "aws",
    "gcp",
    "azure",
    "infrastructure",
    "infrastructure-as-code",
    "iac",
    "terraform",
    "cloudformation",
    "policy-as-code",
    "opa",
    "rego",
    "observability",
    "monitoring",
    "compliance",
    "audit",
    "configuration",
    "multi-environment",
    "kitium",
    "kitiumai"
  ],
  "author": "Kitium AI",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@kitiumai/error": "^3.0.0",
    "@kitiumai/logger": "^3.0.1",
    "@kitiumai/types": "^3.0.0",
    "@kitiumai/utils-ts": "^3.0.0",
    "commander": "^11.1.0",
    "yaml": "^2.4.2"
  },
  "devDependencies": {
    "@kitiumai/config": "^3.1.4",
    "@kitiumai/lint": "^3.0.1",
